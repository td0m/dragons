{
  "name": "dragons",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@hook-state/core": "^0.1.5",
    "@material-ui/core": "^4.0.2",
    "@material-ui/icons": "^4.0.1",
    "@types/jest": "24.0.13",
    "@types/node": "12.0.4",
    "@types/react": "16.8.19",
    "@types/react-dom": "16.8.4",
    "@types/react-dropzone": "^4.2.2",
    "@types/react-grid-layout": "^0.16.7",
    "notistack": "^0.8.5",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-dropzone": "^10.1.5",
    "react-grid-layout": "^0.16.6",
    "react-scripts": "3.0.1",
    "typescript": "3.5.1"
  },
  "scripts": {
    "analyze": "source-map-explorer \"build/static/js/*.js\" --in-source-map --html > source-map-explorer.html",
    "start": "run-p watch:css watch:js",
    "watch:js": "react-scripts start",
    "watch:css": "postcss src/styles.css -o src/styles.bundle.css -w",
    "build:css": "postcss src/styles.css -o src/styles.bundle.css --env production",
    "build:js": "react-scripts build",
    "build": "run-s build:css build:js",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^1.2.0",
    "autoprefixer": "^9.6.0",
    "cssnano": "^4.1.10",
    "node-sass": "^4.12.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.2",
    "source-map-explorer": "^2.0.0",
    "tailwindcss": "^1.0.4"
  }
}
